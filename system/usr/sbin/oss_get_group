if [ -z $1 ]
then
        echo "Usage:
     $0  class|primary|workgroup"
fi
if [ "$2" = "dn" ]
then
        ldapsearch -x -LLL "(&(objectclass=schoolGroup)(grouptype=$1))" dn | grep dn: | sed 's/dn: //'
else
        ldapsearch -x -LLL "(&(objectclass=schoolGroup)(grouptype=$1))" cn | grep cn: | sed 's/cn: //'
fi

