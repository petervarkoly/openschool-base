/var/log/oss-backup.log {
    compress
    dateext
    maxage 365
    rotate 99
    size=+1024k
    missingok
    copytruncate
}

/var/log/virus_scan_logs/*.log {
    compress
    dateext
    maxage 120
    rotate 99
    size=+1024k
    missingok
    copytruncate
}

/var/log/apach2/admin*log  /var/log/apach2/schoolserver*log {
    compress
    dateext
    maxage 120
    rotate 99
    size=+1024k
    missingok
    copytruncate
}

/var/log/tomcat6/*.log /var/log/tomcat6/catalina.out {
        compress
        dateext
        notifempty
        create 640 tomcat tomcat
	su tomcat tomcat
        rotate 99
        size 4M
        maxage 365
        sharedscripts
        postrotate
                /etc/init.d/tomcat6 restart
        endscript
}

