LOGFILE=/tmp/procmail.log
VERBOSE=yes

MBOX=$1
SHIFT=1

:0
* ^X-Spam-Flag: YES
| /usr/bin/formail -I "From " | /usr/lib/cyrus/bin/deliver -q -a cyrus -m "$MBOX/spam"

:0
* !^X-Spam-Flag: YES
{
        :0
        | /usr/bin/formail -I "From " | /usr/lib/cyrus/bin/deliver -q -a cyrus -m "$MBOX"

#       :0
#       /var/spool/mail/"$MBOX"
}
